{
  "name": "melodie",
  "version": "2.0.0-beta.1",
  "description": "MÃ©lodie is a portable, simple-as-pie music player",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/melodie"
  },
  "workspaces": [
    "common/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "run-p -ncs dev:**",
    "dev:desktop": "npm run --prefix apps/desktop dev",
    "dev:ui": "npm run --prefix common/ui dev",
    "lint": "run-s -ncs lint:**",
    "lint:core": "npx eslint common/core/lib",
    "lint:desktop": "npx eslint apps/desktop/lib",
    "lint:site": "npx eslint apps/site/src",
    "lint:ui": "npx eslint common/ui/src",
    "release:bump": "standard-version -s",
    "start": "run-p -n dev:**",
    "test": "run-s -ncs test:**",
    "test:core": "npm run --prefix common/core test",
    "test:desktop": "npm run --prefix apps/desktop test",
    "test:site": "npm run --prefix apps/site test",
    "test:ui": "npm run --prefix common/ui test"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^4.12.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.24.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.(json|md)": [
      "prettier --write"
    ]
  }
}
